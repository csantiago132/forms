{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@kurocado-studio/qa/remix/tsconfig.qa",
    "@kurocado-studio/styleguide/remix/tsconfig"
  ],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "setup.remix.ts",
    "tailwind.config.ts",
    "test/**/*.test.ts",
    "test/**/*.test.tsx",
    "tsup.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
}
